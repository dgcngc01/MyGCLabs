@model DrawResponse
	<form asp-controller="Home" asp-action="Draw" method="post">
		<h1>Your Cards:</h1>

		@foreach (Card card in Model.cards)
		{
				<img src="@card.image" style="width:50px;height=75px" /> @card.value <text> of </text> @card.suit
				<br />
				<br />
		}

		<input type="Submit" value="Re-Draw Your Cards" class="btn btn-primary" Draw>

	</form>